{
    "family": "your task definition family",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "executionRoleArn": "your ecsTaskExecutionRole arn",
    "taskRoleArn": "your ecs-exec-role arn",
    "cpu": "2048",
    "memory": "6144",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    },
    "containerDefinitions": [
        {
            "name": "producer container name",
            "image": "<IMAGE1_NAME>",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "PROCESS_TYPE",
                    "value": "producer"
                },
                {
                    "name": "NODE_ENV",
                    "value": "production"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/",
                    "awslogs-region": "region",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "worker container name",
            "image": "<IMAGE1_NAME>",
            "essential": false,
            "environment": [
                {
                    "name": "PROCESS_TYPE",
                    "value": "consumer"
                },
                {
                    "name": "NODE_ENV",
                    "value": "production"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/",
                    "awslogs-region": "region",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}